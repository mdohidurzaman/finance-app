<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-left">User details</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <dl class="dl-horizontal">
                    <dt><strong>Full Name</strong></dt>
                    <dd><%= @user.full_name %></dd>
                    <dt><strong>Email</strong></dt>
                    <dd><%= @user.email %></dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="show_stocks">
                    <% if @user.stocks.size > 0 %>
                    <%= render 'stocks/list' %>
                    <% else %>
                   <p class="lead">The user is not tracker any stocks</p>
                    <% end %>
                </div>
            </div>
        </div>
         <div class="row">
            <div class="col-md-12">
                <div class="back_button">
                   <%= link_to "Back", my_friends_path, class: "btn btn-primary" %> 
                </div>
            </div>
        </div>
    </div>
</section>