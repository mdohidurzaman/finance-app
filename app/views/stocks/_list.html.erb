<section class="stock_list">
    <div class="container">
        <div class="row">
            <div class="col-md-12 no-padding">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Symble</th>
                            <th>Name</th>
                            <th>Latest price</th>
                            <th>High price</th>
                            <th>Low price</th>
                            <% if @user.id == current_user.id %>
                            <th>Action</th>
                            <% end %>
                        </tr>
                    </thead>
                    <tbody>
                        <% @user_stocks.each do |user_stock| %>
                        <tr>
                            <td><%= user_stock.ticker %></td>
                            <td><%= user_stock.name %></td>
                            <td><%= user_stock.last_price %></td>
                            <td><%= user_stock.high_price %></td>
                            <td><%= user_stock.low_price %></td>
                             <% if @user.id == current_user.id %>
                            <td><%= link_to "Delete this stock", user_stock_path(user_stock), method: :delete,
                                data: {confirm: "Are you sure?"}, class: "btn btn-md btn-danger" %></td>
                             <% end %>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>