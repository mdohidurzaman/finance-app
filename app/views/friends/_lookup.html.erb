<section class="friend">
    <div class="container">
        <div class="row no-padding col-md-12">
          <h1 class="text-left">My friends</h1>
          <h3 class="text-left">Search for Friends</h3>
        </div>
            <div class="row no-padding">
            <div class="col-md-12 no-padding">
             <div class="search_friend">
            <%= form_tag search_friends_path, remote: true, method: :get, id: "friend-lookup-form" do %>
            <div class="form-group row">
            <div class="col-md-8 no-padding">
                <div class="search-box">
                    <%= text_field_tag :search_param, params[:search_param], placeholder: 'Enter name or email', 
                                    autofocus: true, class: 'form-control search-box input-lg' %>
                </div>
             </div>
             <div class="col-md-2">
              <div class="search-button">
                <%= button_tag(type: :submit, class: 'btn btn-lg btn-success') do %>
                    <i class="fa fa-search"></i> Search
                <% end %>
              </div>
            </div>
         </div>
         <% end %>
          </div>
        </div>
      </div>
   </div>
 </div>
<div class="row">
   <div class="col-md-12">
     <div id="results">
      <%= render "result" %>
    </div>
  </div>
</div>